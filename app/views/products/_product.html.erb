<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th> <th>Description</th> <th>Image</th> <th>Price</th> <th>Categories</th>
    </tr>
  </thead>
  <tbody id="<%= product.id %>"> 
    <td><%= link_to product.title, product_path(product) %></td>
    <td><%= product.description %> <img height=100 src="<%= product.image_link %>"></img></td>
    <td><%= number_to_currency(product.price) %></td>
    <td><% product.categories.each do |c| %> 
      <%= link_to c.title, category_path(c) %>
      <% end %></td>
     <% if admin? %>
    <td><%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= if product.activity then "Active" else "Retired" end %>
    	<% end %></td>
    <td><%= link_to "Add to Cart", cart_items_path(:product_id => product), :method => :post, :remote => true, :id => "product_#{product.id}" %><td>
  </tbody>
</table>
